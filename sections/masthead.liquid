{{ 'masthead.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .masthead__title {
    color: {{ section.settings.colorHeading }};
  }

{%- endstyle -%}

<section class="masthead" style="background-image: url({{ section.settings.image | image_url }});">
  <div class="masthead__container">
    <div class="masthead__title">{{ section.settings.title }}</div>
    <div class="arrows">
      <svg class="a1" xmlns="http://www.w3.org/2000/svg" width="45" height="24" viewBox="0 0 45 24" fill="none">
        <path fill-rule="evenodd" clip-rule="evenodd" d="M0.92363 0.455288C1.50061 -0.139175 2.45025 -0.153349 3.04471 0.42363L23.6042 20.3784L42.9231 0.455782C43.4999 -0.138946 44.4495 -0.153556 45.0442 0.423151C45.6389 0.999857 45.6536 1.94949 45.0769 2.54422L24.7132 23.5442C24.4362 23.8299 24.057 23.9938 23.6591 23.9998C23.2612 24.0059 22.8772 23.8535 22.5917 23.5764L0.955288 2.57637C0.360825 1.99939 0.346651 1.04975 0.92363 0.455288Z" fill="white"/>
      </svg>
      <svg class="a2" xmlns="http://www.w3.org/2000/svg" width="45" height="24" viewBox="0 0 45 24" fill="none">
        <path fill-rule="evenodd" clip-rule="evenodd" d="M0.92363 0.455288C1.50061 -0.139175 2.45025 -0.153349 3.04471 0.42363L23.6042 20.3784L42.9231 0.455782C43.4999 -0.138946 44.4495 -0.153556 45.0442 0.423151C45.6389 0.999857 45.6536 1.94949 45.0769 2.54422L24.7132 23.5442C24.4362 23.8299 24.057 23.9938 23.6591 23.9998C23.2612 24.0059 22.8772 23.8535 22.5917 23.5764L0.955288 2.57637C0.360825 1.99939 0.346651 1.04975 0.92363 0.455288Z" fill="white"/>
      </svg>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Masthead",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": [
      "header",
      "footer"
    ]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Title",
      "label": "Title"
    },
    {
      "type": "color",
      "id": "colorHeading",
      "label": "Color heading",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Masthead"
    }
  ]
}
{% endschema %}